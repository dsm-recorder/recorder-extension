{
  "short_name": "Recorder",
  "name": "Recorder Extension",
  "description": "웹사이트 리코더 전용 익스텐션입니다.깃허브 PR페이지에 들어가서 Ctrl+I(Command+I)로 편하게 작성해보세요!",
  "manifest_version": 3,
  "version": "1.0.0",
  "action": {
    "default_icon": "favicon.ico",
    "default_popup": "index.html",
    "default_title": "Reacorder"
  },
  "host_permissions": ["http://localhost:3000/"],
  "permissions": ["activeTab", "tabs", "cookies", "storage"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+I",
        "mac": "Command+I"
      }
    }
  }
}
